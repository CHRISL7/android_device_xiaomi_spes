on post-fs-data
    mkdir /data/vendor/nfc 0770 nfc nfc    
	
service stflashtool /vendor/bin/STFlashTool
    class late_start
    group nfc
    user nfc
    disabled
    oneshot

service secure_element_hal_service /vendor/bin/hw/android.hardware.secure_element@1.2-service.st
    override
    class hal
    user secure_element
    group secure_element nfc
    disabled

service nfc_hal_service /vendor/bin/hw/android.hardware.nfc@1.2-service.st
    override
    class hal
    user nfc
    group nfc
    disabled

on post-fs && property:ro.boot.hwname=spesn
    start stflashtool
    setprop ro.vendor.se.type HCE,UICC

on boot && property:ro.boot.hwname=spesn
    start nfc_hal_service
    start secure_element_hal_service
